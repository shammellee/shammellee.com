	# RewriteCond %{REQUEST_URI}%{QUERY_STRING} ^.*(admin|auth|unblock|sql|db|p.?m.?a.?|login|crawl|mail|access|scrape|rom\-0|w00t|1337|pwn|hack).*$ [NC,OR]¬
	# RewriteCond %{HTTP_REFERER} ^.*(crawl|rom\-0|semalt|baidu|download|unblock).*$ [NC]¬
	# RewriteRule ^(.*)$ ${hackers:rick} [R,L,E=no_log:1]¬

	# Basic Rewrites
	RewriteRule ^/(resume)/?$ /$1.php [L]

	# Hide BoomBox work¬
	SetEnvIf Remote_Addr ^96\.239\.100 HIDE_WORK=bbx¬
	SetEnvIf Remote_Addr ^12\.10\.219 HIDE_WORK=bbx¬

	# Hide Edulence work¬
	SetEnvIf Remote_Addr ^208\.125\.3\.15 HIDE_WORK=edu¬

	SetEnvIf Request_URI \.(jpg|png|gif|ico|ttf|woff|eot|css|js|txt|php|py|rb|sh)([\?\#\&].*)?$ no_log¬
	SetEnvIf Remote_Addr 24\.90\.151\.251 no_log¬
	SetEnvIf Remote_Addr \:\:1 no_log¬
	SetEnvIf Remote_Addr 127\.0\.0\.1 no_log

	# Available loglevels: trace8, ..., trace1, debug, info, notice, warn,
	# error, crit, alert, emerg.
	# It is also possible to configure the loglevel for particular
	# modules, e.g.
	#LogLevel info ssl:warn

	ErrorLog ${APACHE_LOG_DIR}/error.log
	CustomLog ${APACHE_LOG_DIR}/access.log combined

	# For most configuration files from conf-available/, which are
	# enabled or disabled at a global level, it is possible to
	# include a line for only one particular virtual host. For example the
	# following line enables the CGI configuration for this host only
	# after it has been globally disabled with "a2disconf".
	#Include conf-available/serve-cgi-bin.conf
</VirtualHost>

<IfModule security2_module>
	SecRuleEngine on
	ServerTokens Full
	SecServerSignature "{{domain}}"
</IfModule>

